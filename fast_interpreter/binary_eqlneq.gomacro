	// on our return value. no need to optimize that.
	var fun func(env *Env) bool
	if xc == yc {
		x, y := xe.Fun, ye.Fun
		{eqlneqs; token.NEQ; false; false; { int; uint; float32; float64; complex64; complex128; string; nil } }
